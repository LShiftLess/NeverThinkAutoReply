QWidget {
    background-color: #2b2d30;
    border-radius: 10px;
    padding-left: 5px;
    padding-right: 5px;
}

QPushButton {
    font-family: Arial, sans-serif;
    font-size: 14px;
    color: #bcbec3;
    background-color: #2b2d30;
    border-radius: 5px;
    margin-left: 5px;
    margin-right: 5px;
}

QPushButton:hover {
    background-color: #4b4c4f;
}

QPushButton::icon {
    width: 24px;
    height: 24px;
}
